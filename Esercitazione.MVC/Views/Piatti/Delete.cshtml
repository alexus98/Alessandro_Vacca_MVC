@model PiattoViewModel
<p>Sei sicuro di voler eliminare il piatto @Model.Id - @Model.Nome ?</p>
<form method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descrizione"></label>
        <input asp-for="Descrizione" class="form-control" readonly />
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prezzo"></label>
        <input asp-for="Prezzo" class="form-control" readonly />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoPiatto"></label>
        <input asp-for="TipoPiatto" class="form-control" readonly />
        <span asp-validation-for="TipoPiatto" class="text-danger"></span>
    </div>

    <input type="submit" value="Conferma eliminazione" class="btn btn-danger" />
    <a class="btn btn-primary" asp-controller="Piatti" asp-action="Index">Annulla</a>
</form>
