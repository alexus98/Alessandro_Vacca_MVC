@model MenuViewModel
<h1>Ecco i dettagli del @Model.Nome</h1>

<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrizione</th>
            <th>TipoPiatto</th>
            <th>Prezzo</th>
            @if (User.IsInRole("Ristoratore"))
            {
                <th>Action</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Piatti)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descrizione</td>
                <td>@item.TipoPiatto.ToString()</td>
                <td>@item.Prezzo</td>
                @if (User.IsInRole("Ristoratore"))
                {
                    <td><a asp-controller="Piatto" asp-action="Disaccoppia" asp-route-id="@item.Id" class="btn btn-primary">Disaccoppia</a></td>
                }
            </tr>
        }
    </tbody>
</table>

<p>Totale: @ViewBag.Totale</p>
