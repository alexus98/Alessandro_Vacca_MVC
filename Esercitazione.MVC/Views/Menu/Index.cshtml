@model List<MenuViewModel>

<h1>Ecco la lista dei Corsi</h1>
@if (User.IsInRole("Ristoratore"))
{
    <a type=button class="btn btn-primary" asp-controller="Menu" asp-action="Create">Inserisci Nuovo Menu</a>
}
<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>
                    <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Visualizza Dettagli</a>
                </td>
            </tr>
        }
    </tbody>
</table>